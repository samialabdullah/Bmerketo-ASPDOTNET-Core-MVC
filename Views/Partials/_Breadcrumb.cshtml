@model BreadcrumbViewModel


@if (Model != null)
{
    <section class="breadcrumb">
        <div class="container">
            <div class="content">
                @if (Model.Title != null)
                {
                    <h1>@Model.Title</h1>
                }

                @if (Model.Item_1 + Model.Item_2 != null)
                {
                    <ul>
                        <li>@Model.Item_1</li>
                        <li>@Model.Item_2</li>
                    </ul>
                }

            </div>
        </div>
    </section>
}