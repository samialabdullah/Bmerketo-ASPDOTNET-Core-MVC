@model UpToSellItemsViewModel

<a a asp-controller="products" asp-action="details" asp-route-id="@Model.Id" class="collection-item">
    <img src="@Model.ImageUrl" alt="">
    <div class="body">
        <div class="title">@Model.Title</div>
        <div class="info">
            <div class="Price">$@Model.Price</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>
    </div>
</a>

<div class="title-red">@Model.TitleRed</div>
<div class="title">@Model.Title</div>
<div class="ingress">@Model.Ingress</div>
<div class="text">@Model.Text</div>
<a a asp-controller="products" class="link">Discover More</a>