@model UpToSellViewModel

@if (Model != null)
{
    <section class="up-to-sell">
        <div class="container">
            <div class="collection-grid">
                @if (Model.CardItem_one != null)
                {
                    <div class="item-first">
                        @foreach (var item in Model.CardItem_one)
                        {
                            <partial name="/Views/Partials/UpToSell/_CardItem.cshtml" model="item" />
                        }
                    </div>
                }

                @if (Model.Discover != null)
                {
                    <div class="discover">
                        <div class="collection-content">
                            <div class="container">
                                <partial name="/Views/Partials/UpToSell/_DiscoverItem.cshtml" model="Model.Discover" />
                            </div>
                        </div>
                    </div>
                }

                @if (Model.CardItem_two != null)
                {
                    <div class="item-second">
                        @foreach (var item in Model.CardItem_two)
                        {
                            <partial name="/Views/Partials/UpToSell/_CardItem.cshtml" model="item" />
                        }
                    </div>
                }

            </div>
        </div>
    </section>
}