@model UpToSellViewModel

@if (Model != null)
{
    <section class="up-to-sell">
        <div class="container">
            <div class="collection-grid">
                @if (Model.CardItems != null)
                {
                    <div class="item-1">
                        @foreach (var item in Model.CardItems)
                        {
                            <partial name="/Views/Partials/_UpToSellCardItem.cshtml" model="item" />
                        }
                    </div>
                }

                @if (Model.Discover != null)
                {
                    <div class="discover">
                        <div class="collection-content">
                            <div class="container">
                                <!-- maybe need to decler the model hear -->
                                <partial name="/Views/Partials/_UpToSellDiscover.cshtml" model="Model.Discover" />
                            </div>
                        </div>
                    </div>
                }


                <div class="item-2">
                    @foreach (var item in Model.CardItems_1)
                    {
                        <partial name="/Views/Partials/_UpToSellCardItem.cshtml" model="item" />
                    }
                </div>
            </div>
        </div>
    </section>
}